<p id="notice"><%= notice %></p>

<h1>今日の筋トレ記録</h1>

<table>
  <thead>
    <tr>
        <th>ユーザー名</th>
        <th>鍛えた部位</th>
        <th>日付</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <body>
    <% @blogs.each do |blog| %>
      <tr>
        <td><a href="/users/<%= blog.user.id %>"><%= blog.user.name %></a><td>
        <td><%= blog.part %></td>
        <td><%= blog.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細へ', blog_path(blog.id) %></td>
        <td><%= link_to '編集する', edit_blog_path(blog.id) %></td>
        <td><%= link_to '削除する',blog_path(blog.id), method: :delete, data: { confirm: '筋トレ記録を削除しますか?' } %></td>
      </tr>
    <% end %>
  </body>
</table>
<br>




<%= link_to '更に筋トレを記録する', new_blog_path %>
