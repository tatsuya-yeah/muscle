<p id="notice"><%= notice %></p>

<h1>筋トレカレンダー</h1>

<table>
  <thead>
    <tr>
        <th>鍛えた部位</th>
        <th>日付</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.part %></td>
        <td><%= blog.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細へ', blog_path(blog.id) %></td>
        <td><%= link_to '編集する', edit_blog_path(blog.id) %></td>
        <td><%= link_to '削除する',blog_path(blog.id), method: :delete, data: { confirm: '筋トレ記録を消しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '筋トレを記録する', new_blog_path %>

<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>

  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.part, blog %>
    </div>
  <% end %>
<% end %>
<%= link_to "マイページへ", fronts_path %>




