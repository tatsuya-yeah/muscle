<div class="header-page" data-turbolinks="false">
    <h1><a href="/fronts/<%= current_user.id %>"><span class="maintitle">The Strongest</span><span class="description">Home Trainee</span></a></h1>
</div>

<div class="blog-edit">
    <h2>筋トレ記録編集</h2>
    <%= form_for @blog do |f| %>

    <div class="field">
        <%= f.label :部位, class:"blog-label blog-part" %>
        <%= f.select :part,
    [["腹筋", "腹筋"],
    ["肩", "肩"],
    ["背中", "背中"]], include_blank: "選択して下さい" %>
    </div>
    <div class="field">
        <%= f.label :種目, class:"blog-label" %>
        <%= f.text_field :training, :size => 30, class:"blog-field" %>
    </div>
    <div class="field">
        <%= f.label :感想, class:"blog-label" %>
        <%= f.text_field :about, :size => 30, class:"blog-field" %>
    </div>
    <div class="time">
        <%= f.label :トレーニング日, class:"blog-label" %>
        <%= f.datetime_select :start_time, class:"blog-field" %>
    </div>
    <div class="submit">
        <%= f.submit "編集する", class:"submit-text" %>
        <% end %>
    </div>
</div>