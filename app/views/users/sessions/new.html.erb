<link rel="stylesheet" href="stylesheets/users.css">


<div class="header-settion-new">

</div>
<div class="login">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス, class:"login-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 100, 
    :placeholder => "メールアドレスを入力してください。", class:"login-field" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class:"login-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", :size => 100, :placeholder => "パスワードを入力してください。", class:"login-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field-save">
    <%= f.check_box :remember_me %>
    <%= f.label :パスワードを保存する %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"login-button" %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>