<link rel="stylesheet" href="stylesheets/registrations.css">


<div class="header-registration-new">
  
</div>
<div class="signup">
  <h2>アカウント登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :メールアドレス, class:"signup-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 100, :placeholder => "メールアドレスを入力してください。", class:"signup-field" %>
  </div>

  <div class="field">
    <%= f.label :ユーザー名, class:"signup-label" %>
    <%= f.text_field :name, autofocus: true, :size => 100, :placeholder => "ユーザー名を入力してください。", class:"signup-field" %>
  </div>


  <div class="field">
    <%= f.label :パスワード, class:"signup-label" %>
    <%= f.password_field :password, autocomplete: "new-password", :size => 100, :placeholder => "パスワードを入力してください。", class:"signup-field" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード, class:"signup-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => 100, :placeholder => "  確認用パスワードを入力してください。", class:"signup-field" %>
  </div>

  <div class="actions">
    <%= f.submit "アカウント登録", class:"signup-button" %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>