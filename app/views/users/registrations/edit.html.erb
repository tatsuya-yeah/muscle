<link rel="stylesheet" href="stylesheets/users.css">

<div class="edit">
  <h2>ユーザー編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :現在のパスワード, class:"edit-label" %> 
    <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", :size => 30, :placeholder => "マイページを変えるために現在のパスワードを入力してください。", class:"edit-field" %>
    　</div>


  <div class="field">
    <%= f.label :ユーザー名, class:"edit-label"  %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :size => 30, :placeholder => "ユーザー名を入力してください。", class:"edit-field" %>
  </div>

  <div class="field">
    <%= f.label :ユーザー画像, class:"edit-label" %><br />
    <%= f.file_field :image, autofocus: true, :size => 30, class:"edit-field" %>
  </div>

  <div class="field">
    <%= f.label :みんなにひとこと, class:"edit-label"  %><br />
    <%= f.text_area :profile, autofocus: true, :size => 30, :placeholder => "ひとことを入力してください。", class:"edit-field" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス, class:"edit-label"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 30, :placeholder => "メールアドレスを入力してください。", class:"edit-field" %>
  </div>



  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワード（６文字以上）, class:"edit-label"  %> 
    <%= f.password_field :password, autocomplete: "new-password", :size => 30, :placeholder => "パスワードを変更しない場合は空白のままにしておいて下さい。", class:"edit-field"%>

  </div>

  <div class="field">
    <%= f.label :確認用パスワード, class:"edit-label"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => 30, :placeholder => "確認用パスワードを入力してください。", class:"edit-field" %>
  </div>



  <div class="actions">
    <%= f.submit "プロフィール変更", class:"edit-button" %>
  </div>
  <% end %>

  <%= link_to "プロフィールに戻る", user_path(current_user), class:"stop-edit-button" %>
</div>