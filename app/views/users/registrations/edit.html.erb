<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>(マイページを変えるために現在のパスワードを入力してください。)</i><br />
    <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password" %>
　</div>


  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
  <%= f.label :ユーザー画像%><br />
  <%= f.file_field :image, autofocus: true %>
</div>

  <div class="field">
    <%= f.label :みんなにひとこと %><br />
    <%= f.text_area :profile, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :emailアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワードの入力 %> <i>(パスワードを変更しない場合は空白のままにしておいて下さい。)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :新しいパスワードの入力（２回目） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>



  <div class="actions">
    <%= f.submit "プロフィール変更" %>
  </div>
<% end %>


<p> <%= button_to "プロフィールの変更をやめる", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "プロフィールに戻る", user_path(current_user) %>

